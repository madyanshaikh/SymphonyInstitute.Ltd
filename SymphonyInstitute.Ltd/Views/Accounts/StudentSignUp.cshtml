@model SymphonyInstitute.Ltd.Models.Student

@{
    ViewData["Title"] = "StudentSignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-center">
    <h2 class="text-info">SignUp</h2>
</div>

<div class="row">
    <h4 class="box-title text-info mb-0"><i class="ti-user me-15"></i> Personal Info</h4>
    <hr class="my-15">
    <div class="col-md-6">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">first Name</label>
            <input asp-for="Fname" class="form-control" />
            <span asp-validation-for="Fname" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Last Name</label>
            <input asp-for="Lname" class="form-control" />
            <span asp-validation-for="Lname" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Contact</label>
            <input asp-for="MobileNumber" class="form-control" />
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
        </div>
    </div>


    <h4 class="box-title text-info mb-0 mt-20"><i class="ti-save me-15"></i> Requirements</h4>
    <hr class="my-15">

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Nic" class="control-label"></label>
            <input asp-for="Nic" class="form-control" />
            <span asp-validation-for="Nic" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Date Of Birth</label>
            <input type="date" asp-for="Dob" class="form-control" />
            <span asp-validation-for="Dob" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="GuradianNumber" class="control-label"></label>
            <input asp-for="GuradianNumber" class="form-control" />
            <span asp-validation-for="GuradianNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label class="control-label" asp-for="religion"></label>
            <select class="form-control form-select" asp-for="religion" style="width:150px">
                <option>....</option>
                <option value=101101>Islam</option>
                <option value=101102>Christian</option>
                <option value=101103>Jewish</option>
                <option value=101104>Hindu</option>

            </select>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label class="control-label" asp-for="Qualifications"></label>
            <select class="form-control form-select" asp-for="Qualifications" style="width:150px">
                <option>....</option>
                <option value=101001>Matricualtion</option>
                <option value=101002>Intermediate</option>
                <option value=101003>Garduate</option>
                <option value=101004>Masters</option>
            </select>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label class="control-label" asp-for="Gender"></label>
            <select class="form-control form-select" asp-for="Gender">
                <option>....</option>
                <option value="true">Male</option>
                <option value="false">Female</option>
            </select>
        </div>
    </div>
    
        <div class="form-group col-md pt-15">
            <input asp-action="StudentSignUp" method="post" type="submit" value="Submit" class="form-control form-select-lg btn-success-light" />
        </div>


   

</div>



